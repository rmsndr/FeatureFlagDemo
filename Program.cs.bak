using io.harness.cfsdk.client.api;

var builder = WebApplication.CreateBuilder(args);

builder.Services.AddRazorPages();

var apiKey = builder.Configuration["FeatureFlags:SDKKey"];

// Initialize the client
CfClient.Instance.Initialize(apiKey, Config.Builder().Build());

// Register as ICfClient so we can call the interface methods
builder.Services.AddSingleton<ICfClient>(CfClient.Instance);

var app = builder.Build();

if (!app.Environment.IsDevelopment())
{
    app.UseExceptionHandler("/Error");
    app.UseHsts();
}

app.UseHttpsRedirection();
app.UseRouting();
app.UseAuthorization();

app.MapStaticAssets();
app.MapRazorPages().WithStaticAssets();

app.Run();
